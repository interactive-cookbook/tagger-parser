{
    "dataset_reader": {
        "type": "conll2003",
        "coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "token_characters": {
                "type": "characters",
                "min_padding_length": 3
            },
            "tokens": {
                "type": "elmo_characters"
            }
        }
    },
    "model": {
        "type": "crf_tagger",
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.5,
            "hidden_size": 50,
            "input_size": 1152,
            "num_layers": 2
        },
        "label_encoding": "BIOUL",
        "regularizer": {
            "regexes": [
                [
                    "scalar_parameters",
                    {
                        "alpha": 0.5,
                        "type": "l2"
                    }
                ]
            ]
        },
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16,
                        "vocab_namespace": "token_characters"
                    },
                    "encoder": {
                        "type": "cnn",
                        "conv_layer_activation": "relu",
                        "embedding_dim": 16,
                        "ngram_filter_sizes": [
                            3
                        ],
                        "num_filters": 128
                    }
                },
                "tokens": {
                    "type": "elmo_token_embedder",
                    "do_layer_norm": false,
                    "dropout": 0,
                    "options_file": "/proj/cookbook.shadow/elmo_english/model.text_field_embedder.elmo.options_file",
                    "weight_file": "/proj/cookbook.shadow/elmo_english/model.text_field_embedder.elmo.weight_file"
                }
            }
        }
    },
    "train_data_path": "data/English/Tagger/train.conll03",
    "validation_data_path": "data/English/Tagger/dev.conll03",
    "test_data_path": "data/English/Tagger/test.conll03",
    "trainer": {
        "checkpointer": {
            "keep_most_recent_by_count": 1
        },
        "cuda_device": 0,
        "grad_norm": 10,
        "num_epochs": 100,
        "num_gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "adam",
            "lr": 0.0075
        },
        "patience": 10,
        "run_confidence_checks": true,
        "use_amp": false,
        "validation_metric": "+accuracy"
    },
    "data_loader": {
        "batch_size": 30
    },
    "datasets_for_vocab_creation": [
        "train"
    ],
    "evaluate_on_test": true
}