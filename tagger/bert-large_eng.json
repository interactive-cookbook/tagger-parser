{
    "dataset_reader": {
        "type": "conll2003",
        "convert_to_coding_scheme": "BIOUL",
        "tag_label": "ner",
        "token_indexers": {
            "tokens": {
                "type": "pretrained_transformer_mismatched",
                "max_length": 512,
                "model_name": "dslim/bert-large-NER"
            }
        }
    },
    "model": {
        "type": "crf_tagger",
        "dropout": 0.15,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.15,
            "hidden_size": 200,
            "input_size": 1024,
            "num_layers": 2
        },
        "label_encoding": "BIOUL",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "pretrained_transformer_mismatched",
                    "gradient_checkpointing": true,
                    "max_length": 512,
                    "model_name": "dslim/bert-large-NER"
                }
            }
        }
    },
    "train_data_path": "data/English/Tagger/train.conll03",
    "validation_data_path": "data/English/Tagger/dev.conll03",
    "test_data_path": "data/English/Tagger/test.conll03",
    "trainer": {
        "checkpointer": {
            "keep_most_recent_by_count": 1
        },
        "cuda_device": 2,
        "num_epochs": 150,
        "num_gradient_accumulation_steps": 1,
        "optimizer": {
            "type": "adam",
            "lr": 2e-05
        },
        "patience": 20,
        "run_confidence_checks": false,
        "validation_metric": "+f1-measure-overall"
    },
    "data_loader": {
        "batch_size": 10
    },
    "datasets_for_vocab_creation": [
        "train"
    ],
    "evaluate_on_test": true
}